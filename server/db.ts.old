export async function searchCandidates(filters: {
  educationLevel?: string;
  city?: string;
  availableForInternship?: boolean;
  availableForCLT?: boolean;
  status?: string;
}) {
  const db = await getDb();
  if (!db) return [];
  
  let query = db.select().from(candidates);
  const conditions = [];
  
  if (filters.educationLevel) {
    conditions.push(eq(candidates.educationLevel, filters.educationLevel as any));
  }
  if (filters.city) {
    conditions.push(eq(candidates.city, filters.city));
  }
  if (filters.availableForInternship !== undefined) {
    conditions.push(eq(candidates.availableForInternship, filters.availableForInternship));
  }
  if (filters.availableForCLT !== undefined) {
    conditions.push(eq(candidates.availableForCLT, filters.availableForCLT));
  }
  if (filters.status) {
    conditions.push(eq(candidates.status, filters.status as any));
  }
  
  if (conditions.length > 0) {
    query = query.where(and(...conditions)) as any;
  }
  
  return await query.orderBy(desc(candidates.createdAt));
}

